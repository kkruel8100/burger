<div class="display">
  <div class="burger left">
    <ul>
      {{#each burgers}} {{#unless devoured}}
      <div class="wishlist">
        {{id}}&nbsp&nbsp{{burger_name}}
      </div>
      <button class="change-devour" data-id="{{id}}" data-newdevour="{{devour}}">Eat Me!</button>
      {{/unless}} {{/each}}
    </ul>
  </div>
  <div class="burger right">
    <ul>
      {{#each burgers}} {{#if devoured}}
      <div class="wishlist">
        {{id}}&nbsp&nbsp{{burger_name}}
      </div>{{/if}} {{/each}}
    </ul>
  </div>
</div>
<div class="burger center">
  <form class="create-form">
    <div class="form-group">
      <textarea rows="4" cols="50" id="bu" name="burger_name"></textarea>
      <br>
      <label for="bu">Enter a burger you want to eat.
        <br>Click the "Submit" button</label>
    </div>
    <button type="submit">Submit</button>
  </form>
</div>